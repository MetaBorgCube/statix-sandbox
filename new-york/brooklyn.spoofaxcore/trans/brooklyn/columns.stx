module brooklyn/columns

imports
  signatures/create-table-sig
  brooklyn/datatypes
  brooklyn/constraints
  canarsie/types

rules // column types
  
  typeOfCols maps typeOfCol(*, list(*)) = list(*)
  typeOfCol : scope * ColumnInit -> (string * TYPE * CNULL)
  
  typeOfCol(s, ColumnInit(ColumnDef(ColumnRef(n), t), ccs)) = T :-
    T == (n, typeOfDataType(t), colConstrsOk(s, n, ccs)).
  